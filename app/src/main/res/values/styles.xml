<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Splash Screen Theme-->
    <style name="SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Circular Image View-->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!--Rounded corners Image View-->
    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar" parent="Theme.AppCompat.Light">
        <!-- color used by navigation icon -->
        <item name="colorControlNormal">@color/black</item>
        <!-- color used by overflow menu -->
        <item name="android:textColorSecondary">@color/black</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black</item>
    </style>

    <!-- Tab -->
    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <!--Text Input-->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">none</item>
    </style>
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--Button-->
    <style name="Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeWidth">2sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/primary_2</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:background">@drawable/tab_indicator</item>
    </style>

    <!--Card-->
    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:layout_marginBottom">2sp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">2sp</item>
        <item name="cardElevation">0sp</item>
        <item name="cardMaxElevation">0sp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">8sp</item>
    </style>

    <!-- Font styles-->
    <style name="InterRegular" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>
    <style name="InterThin" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/inter_thin</item>
    </style>
    <style name="LatoBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>
    <style name="LatoRegular" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>
    <style name="Montserrat_Semi_Bold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>
    <style name="PoppinsLight" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>
    <style name="PoppinsSemiBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>
</resources>