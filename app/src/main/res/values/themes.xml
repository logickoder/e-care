<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ECare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/primary_2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>nm
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Theme.ECare.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ECare.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ECare.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Splash Screen Theme-->
    <style name="SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Circular Image View-->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!--Rounded corners Image View-->
    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar" parent="Theme.AppCompat.Light">
        <!-- color used by navigation icon -->
        <item name="colorControlNormal">@color/black</item>
        <!-- color used by overflow menu -->
        <item name="android:textColorSecondary">@color/black</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black</item>
    </style>

    <!-- Tab -->
    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Font styles-->
    <style name="InterRegular" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>
    <style name="InterThin" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/inter_thin</item>
    </style>
    <style name="LatoBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>
    <style name="LatoRegular" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>
    <style name="Montserrat_Semi_Bold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>
    <style name="PoppinsLight" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>
    <style name="PoppinsSemiBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

</resources>