<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/nav_onboarding"
        android:name="com.zuritraining.pjt_14_ecare.ui.onboarding_page.OnboardingFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_onboarding_page" >
        <action
            android:id="@+id/action_nav_onboarding_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
  
  <fragment
        android:id="@+id/loginFragment"
        android:name="com.zuritraining.pjt_14_ecare.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" >
      <action
          android:id="@+id/action_loginFragment_to_nav_home"
          app:destination="@id/navigation_home" />
  </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.zuritraining.pjt_14_ecare.ui.home.HomeFragment"
        android:label=" "
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/doctorsCreateAccount"
        android:name="com.zuritraining.pjt_14_ecare.DoctorsCreateAccount"
        android:label="doctors_create_account_fragment"
        tools:layout="@layout/doctors_create_account_fragment" />
    <fragment
        android:id="@+id/doctorsProfile"
        android:name="com.zuritraining.pjt_14_ecare.DoctorsProfile"
        android:label="fragment_doctors_profile"
        tools:layout="@layout/fragment_doctors_profile" />

    <fragment
        android:id="@+id/navigation_appointments"
        android:name="com.zuritraining.pjt_14_ecare.ui.patient.appointments.AppointmentsFragment"
