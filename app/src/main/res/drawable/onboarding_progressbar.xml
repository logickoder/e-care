<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background"
        android:gravity="center_vertical|fill_horizontal">
        <shape
            android:shape="rectangle">
            <corners android:radius="2sp" />
            <size android:height="6sp" />
            <solid android:color="@color/primary_3" />
            <stroke android:color="@color/primary_3" android:width="2sp"/>
            <padding android:left="2sp" android:right="2sp" android:top="2sp" android:bottom="2sp"/>
        </shape>
    </item>
    <item android:id="@android:id/progress"
        android:gravity="center_vertical|fill_horizontal">
        <scale android:scaleWidth="100%">
            <shape
                android:shape="rectangle"
                android:tint="@color/white">
                <corners android:radius="2sp" />
                <size android:height="3sp" />
                <solid android:color="@color/white"/>
            </shape>
        </scale>
    </item>
</layer-list>